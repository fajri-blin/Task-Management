@model ClientSide.ViewModels.Additional.CreateAdditionalVM

@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Additional /</span>
            Create Additional
        </h4>
        <div class="card col-md-6">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AddAdditional" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="ProgressGuid" hidden />
                            <div class="form-group">
                                <label asp-for="FileData" class="control-label"></label>
                                <input type="file" asp-for="FileData" class="form-control" multiple />
                                <span asp-validation-for="FileData" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
