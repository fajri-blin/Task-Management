@model ClientSide.ViewModels.Account.ChangePasswordVM

@{
    ViewData["Title"] = "ChangeAccountPassword";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a asp-action="Index" class="app-brand-link gap-2">
                            <span class="app-brand-text demo text-body fw-bolder">MTM</span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <!-- Form -->
                    <h4 class="mb-2">Change Account Password</h4>
                    <p class="mb-4">Please enter your new password below.</p>

                    <form id="formAuthentications" class="mb-3" asp-action="ChangeAccountPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Email" class="form-control" hidden />
                            <input asp-for="OTP" class="form-control" hidden/>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label">New Password</label>
                            <input asp-for="NewPassword" class="form-control" />
                            @if (TempData.ContainsKey("NewPassword_Error"))
                            {
                                <span class="text-danger">@Html.Raw(TempData["NewPassword_Error"])</span>
                            }
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            @if (TempData.ContainsKey("ConfirmPassword_Error"))
                            {
                                <span class="text-danger">@Html.Raw(TempData["ConfirmPassword_Error"])</span>
                            }
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mt-2">
                            <button class="btn btn-primary d-grid w-100" type="submit">Save</button>
                        </div>
                    </form>
                    <!-- /Form -->
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Styles{
    <link rel="stylesheet" href="../assets/vendor/css/pages/page-auth.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
