@model ClientSide.ViewModels.Account.CheckOTPVM

@{
    ViewData["Title"] = "CheckAccountOTP";
}

<h1>CheckAccountOTP</h1>

<h4>CheckOTPVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckAccountOTP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OTP" class="control-label">Enter OTP</label>
                <input asp-for="OTP" class="form-control" />
                <span asp-validation-for="OTP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Your Email</label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
        <p>
            Enter the OTP received on your email to verify your account.
        </p>
        @{
            var message = TempData["Message"] as string;
            if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-success">
                    @message
                </div>
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
